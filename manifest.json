{
  "manifest_version": 2,

  "name": "KeepYourCopy",
  "description": "Stores what you have copied in your computer's clipboard (Ctrl+C/âŒ˜+C) for a certain amount of time",
  "version": "0.3",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "KeepYourCopy"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "content_scripts": [
    { "matches": [
        "http://*/*",
        "https://*/*"
       ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
